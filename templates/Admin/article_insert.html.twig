<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
<h1 class="text-center">Ajouter une article</h1>
{{ form_start(formView) }}
<div class="bg-secondary container p-3 rounded">
        <p>
            {{ user }}
        </p>
    <div class="row m-2 align-items-center">
        <div class="col-6 text-right">{{ form_label(formView.title) }}</div>
        <div class="col-6 text-left">{{ form_widget(formView.title) }}</div>
        {{ form_errors(formView.title) }}
    </div>

    <div class="row m-2 align-items-center">
        <div class="col-6 text-right">{{ form_label(formView.summary) }}</div>
        <div class="col-6 text-left">{{ form_widget(formView.summary) }}</div>
        {{ form_errors(formView.summary) }}
    </div>

    <div class="row m-2 align-items-center">
        <div class="col-6 text-right">{{ form_label(formView.text) }}</div>
        <div class="col-6 text-left">{{ form_widget(formView.text) }}</div>
        {{ form_errors(formView.text) }}
    </div>

    <div class="row m-2 align-items-center">
        <div class="col-6 text-right">{{ form_label(formView.date) }}</div>
        <div class="col-6 text-left">{{ form_widget(formView.date) }}</div>
        {{ form_errors(formView.date) }}
    </div>

    <div class="row m-2">
        <div class="col-6 text-right">{{ form_label(formView.type_article) }}</div>
        <div class="col-6 text-left">{{ form_widget(formView.type_article) }}</div>
        {{ form_errors(formView.type_article) }}
    </div>

    <div class="row m-2">
        <div class="col-6 text-right">{{ form_widget(formView.valider) }}</div>
    </div>
</div>
{{ form_end(formView) }}
</body>
</html>