{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
    <br>
    <form method="post" class="w-25 login rounded my-5">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal mx-3 text-center mt-3">Please sign in</h1>
        <label for="inputPseudo" class="mx-3">Pseudo</label>
        <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control mx-3 zonetext" required autofocus>
        <br>
        <label for="inputPassword" class="mx-3">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control mx-3 zonetext" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <br>

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg mx-3 mb-3 bouton" type="submit">
            Sign in
        </button>
    </form><br>
{% endblock %}

{% block footer %}

{% endblock %}